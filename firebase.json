{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/screenshots/**",
      "**/.*",
      "**/node_modules/**",
      "**/src/**"
    ],
    "headers": [
      {
        "source": "service-worker.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "build/index.html"
      }
    ]
  }
}

{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/screenshots/**",
      "**/.*",
      "**/node_modules/**",
      "**/src/**"
    ],
    "headers": [
      {
        "source": "sw.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source" : "**/*.@(jpg|jpeg|gif|png|woff|css|js)",
        "headers" : [
          {
            "key" : "Cache-Control",
            "value" : "max-age=604800"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
